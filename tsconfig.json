{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "target": "es5",
    "declaration": true,
    "outDir": "./lib",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/*"
  ]
}
