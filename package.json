{
  "name": "koa-simple-static",
  "description": "Simple caching static file server for Koa",
  "version": "4.0.6",
  "author": {
    "email": "zac@zacanger.com",
    "name": "Zac Anger",
    "url": "http://zacanger.com"
  },
  "funding": {
    "type": "ko-fi",
    "url": "https://ko-fi.com/zacanger"
  },
  "license": "LGPL-3.0",
  "main": "lib/index.js",
  "files": [
    "koa-simple-static.d.ts",
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib && mkdir lib",
    "cover": "nyc npm run test:tape",
    "prebuild": "run-s -s test clean",
    "preversion": "npm run build",
    "test": "run-s -s test:lint test:ts cover",
    "test-server": "node test-server",
    "test:lint": "eslint --ext .ts -c .eslintrc.json src",
    "test:tape": "tape -r ts-node/register src/test.ts | tap-spec",
    "test:ts": "tsc --noEmit"
  },
  "homepage": "https://github.com/zacanger/koa-simple-static#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zacanger/koa-simple-static.git"
  },
  "bugs": {
    "url": "https://github.com/zacanger/koa-simple-static/issues"
  },
  "keywords": [
    "cache",
    "file",
    "gzip",
    "koa",
    "koa2",
    "middleware",
    "sendfile",
    "server",
    "static"
  ],
  "dependencies": {
    "compressible": "2.0.18",
    "fs-readdir-recursive": "1.1.0",
    "mime-types": "2.1.26",
    "mz": "2.7.0",
    "zeelib": "11.0.12"
  },
  "devDependencies": {
    "@types/compressible": "2.0.0",
    "@types/fs-readdir-recursive": "1.0.0",
    "@types/koa": "2.11.3",
    "@types/mime-types": "2.1.0",
    "@types/mz": "2.7.0",
    "@types/node": "13.11.1",
    "@types/supertest": "2.0.8",
    "@types/tape": "4.2.34",
    "eslint": "6.8.0",
    "eslint-plugin-zacanger": "1.1.4",
    "husky": "4.2.5",
    "istanbul": "0.4.5",
    "koa": "2.11.0",
    "lint-staged": "10.1.3",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.1",
    "prettier": "2.0.4",
    "sortpack": "2.1.4",
    "supertest": "4.0.2",
    "tap-spec": "5.0.0",
    "tape": "4.13.2",
    "ts-node": "8.8.2",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/index.ts"
    ],
    "instrument": true,
    "reporter": [
      "text",
      "html",
      "json"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ],
    "package.json": [
      "sortpack"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
